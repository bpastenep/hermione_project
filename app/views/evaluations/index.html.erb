<div class="container">

    <p id="notice"><%= notice %></p>

<% if user_signed_in? %>
  <%if current_user.rol=="Profesor"%>


    <h1>Evaluaciones</h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Objetivo</th>
          <th>Fecha</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @evaluations.each do |evaluation| %>
          <tr>
            <td><%= evaluation.objetivo %></td>
            <td><%= evaluation.fecha %></td>
            <td><%= link_to 'Mostrar', evaluation %></td>
            <td><%= link_to 'Editar', edit_evaluation_path(evaluation) %></td>
            <td><%= link_to 'Eliminar', evaluation, method: :delete, data: { confirm: 'Está seguro?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <%= link_to 'Nueva evaluación', new_evaluation_path %>

  <%else%>
  <h1><center>No tiene los permisos necesarios.</center></h1>
  <%end%>
<%else%>
  <h1>Debe iniciar sesión</h1>
<%end%>