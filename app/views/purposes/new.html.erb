<% if user_signed_in? %>
  <%if current_user.rol=="Profesor"%>


<h1>Nuevo propósito</h1>



<%= form_with(model: @purpose, local: true) do |form| %>
  <% if @purpose.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@purpose.errors.count, "error") %> prohibited this purpose from being saved:</h2>

      <ul>
      <% @purpose.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :descripcion %>
    <%= form.text_area :descripcion, id: :purpose_descripcion , class: 'form-control'%>
  </div>

  <div class="field">
    <%= form.label :rda_especifico %>
    <%= form.select(:rda_especific_id) do %>
        <% @rda_e.each do |c| %>
          <%= content_tag(:option, c.descripcion, value: c.id) %>
        <% end %>
      <% end %>
  </div>

  <div class="actions">
    <%= form.submit  "Enviar"%>
  </div>
<% end %>

<%= link_to 'Back', purposes_path %>
  <%else%>
  <h1><center>No tiene los permisos necesarios.</center></h1>
  <%end%>
<%else%>
  <h1>Debe iniciar sesión</h1>
<%end%>
