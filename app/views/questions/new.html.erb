    </div>

      <div class="field">
      <b><%= form.label :proposito %><br></b>
      <%= form.select(:proposito) do %>
          <% @proposito.each do |c| %>
            <%= content_tag(:option, c.descripcion, value: c.id) %>
          <% end %>
        <% end %>
    </div>

    <div class="actions">
      <%= form.submit "Crear pregunta", class: "btn btn-primary"  %>
    </div>

  <% end %>


  <%= link_to 'Volver', questions_path %>
</div>

