      <b> <%= form.label :enunciado %></b>
      <%= form.text_area :enunciado, id: :question_enunciado , class: 'form-control'%>
    </div>

    <div class=field>
     <%= form.label(:subir_imagen) %>
     <%= form.file_field :imagen %> <br/>
